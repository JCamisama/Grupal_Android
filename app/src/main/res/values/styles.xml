<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyToolbarTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="MyPopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyEditTextStyle">
        <item name="android:background">@color/grey_200</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="MyButtonStyle">
        <!--        <item name="android:background">@color/gold_standard</item>-->
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MyDialogStyle" parent="@style/Theme.AppCompat.Dialog">
        <!--        <item name="android:background">@drawable/dialog_rounded</item>-->
        <item name="android:background">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowFrame">@color/transparent</item>
    </style>

</resources>

