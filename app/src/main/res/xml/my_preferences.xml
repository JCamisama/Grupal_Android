<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="cat_datos_personales"
        app:title="@string/preferencias">

        <ListPreference
            app:dialogTitle="@string/titulo_dialogo_preferencias_idioma"
            app:entries="@array/languages"
            app:entryValues="@array/language_codes"
            app:key="language"
            app:summary="@string/resumen_preferencias_idioma"
            app:title="@string/titulo_preferencias_idioma" />
        <SwitchPreferenceCompat
            app:key="musica"
            app:title="@string/musicaActiva"/>

    </PreferenceCategory>
</PreferenceScreen>